<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - moment3dotnet</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/moment3dotnet.styles.css" asp-append-version="true" />
</head>
<body class="bg-secondary-subtle">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light fs-3 text" asp-area="" asp-controller="Book" asp-action="Index">Ditt digitala bibliotek</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                            <a class="nav-link text-light fs-5 text" asp-area="" asp-controller="Book" asp-action="Index">Böcker</a>
                        </li>
                        </li>
                            <li class="nav-item">
                            <a class="nav-link text-light fs-5 text" asp-area="" asp-controller="Book" asp-action="Create">Lägg till bok</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fs-5 text" asp-area="" asp-controller="Genre" asp-action="Create">Lägg till kategori</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-success">
        <div class="container text-light">
            &copy; Stina Persson (stpe1901) | Moment 3 .NET
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
