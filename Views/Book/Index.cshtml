@model IEnumerable<moment3dotnet.Models.BookModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Boklistan</h1>

<p>
    <a asp-action="Create">Lägg till bok</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Titel
            </th>
            <th>
                Författare
            </th>
            <th>
                Läst?
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Read)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Ändra</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Välj</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
